<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.vimal.santvicharan.AddUpdate">

    <TextView
        android:id="@+id/niyamsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Niyams: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/notesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/satsangReadingCB" />

    <EditText
        android:id="@+id/updateToAdd"
        android:gravity="top"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesLabel"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/addUpdateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Add Update"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateToAdd" />

    <CheckBox
        android:id="@+id/pujaCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="Puja"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/niyamsLabel"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/tilakChandloCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:text="Tilak chandlo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pujaCB"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/gujaratiReadingCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:text="Gujarati reading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilakChandloCB"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/satsangReadingCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:text="Satsang reading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gujaratiReadingCB"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/NoOGCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="No onion/garlic"
        app:layout_constraintLeft_toRightOf="@+id/satsangReadingCB"
        app:layout_constraintTop_toTopOf="@+id/pujaCB"
        android:layout_marginStart="40dp" />

    <CheckBox
        android:id="@+id/extraMalasCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 extra malas"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/NoOGCB"
        app:layout_constraintLeft_toRightOf="@+id/satsangReadingCB"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="40dp" />

    <CheckBox
        android:id="@+id/bowToParentsCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bow down to parents"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/extraMalasCB"
        app:layout_constraintLeft_toRightOf="@+id/satsangReadingCB"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="40dp" />

    <CheckBox
        android:id="@+id/gharSabhaCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghar sabha"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/bowToParentsCB"
        app:layout_constraintLeft_toRightOf="@+id/satsangReadingCB"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="40dp" />


</android.support.constraint.ConstraintLayout>
